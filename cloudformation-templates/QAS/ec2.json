{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "EC2 instance for Recommender files packaging",
	"Parameters": {
		"KeyName": {
			"Description": "Key Pair name",
			"Type": "AWS::EC2::KeyPair::KeyName",
			"Default": "bigdatakp"
		},
		"Subnet": {
      "Description": "Subnet to launch services in",
      "Type": "AWS::EC2::Subnet::Id",
      "Default": "subnet-a69ac8cc"
    },
    "VPC": {
      "Description": "VPC to launch services in",
      "Type": "AWS::EC2::VPC::Id",
      "Default": "vpc-ee8d3285"
    }
	},
	"Mappings": {
		"RegionAMIMap": {
			"ap-northeast-1": {"AmazonLinux": "ami-cbf90ecb"},
			"ap-southeast-1": {"AmazonLinux": "ami-68d8e93a"},
			"ap-southeast-2": {"AmazonLinux": "ami-fd9cecc7"},
			"eu-central-1": {"AmazonLinux": "ami-a8221fb5"},
			"eu-west-1": {"AmazonLinux": "ami-a10897d6"},
			"sa-east-1": {"AmazonLinux": "ami-b52890a8"},
			"us-east-1": {"AmazonLinux": "ami-1ecae776"},
			"us-west-1": {"AmazonLinux": "ami-d114f295"},
			"us-west-2": {"AmazonLinux": "ami-e7527ed7"}
		}
	},
	"Resources": {
		"SecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupName" : SG_BIGDATA_CM_WCF_QAS,
				"GroupDescription": "allow-ssh",
				"VpcId": {"Ref": "VPC"},
				"SecurityGroupIngress": [{
					"CidrIp": "0.0.0.0/0",
					"FromPort": 22,
					"IpProtocol": "tcp",
					"ToPort": 22
				}]
			}
		},
		"EC2Instance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {"Fn::FindInMap": ["RegionAMIMap", {"Ref": "AWS::Region"}, "AmazonLinux"]},
				"InstanceType": "t2.micro",
				"SubnetId": {"Ref": "Subnet"},
				"Tags" : [
          {
            "Key" : "CTLAdmin",
            "Value" : "NO"
          },
          {
            "Key" : "Direccion",
            "Value" : "BIGDATA"
          },
          {
            "Key" : "Entorno",
            "Value" : "QAS"
          },
          {
            "Key" : "Grupo",
            "Value" : "BIGDATA"
          },
          {
            "Key" : "Name",
            "Value" : "EC2LNX_BIGDATA_CM_QAS"
          },
          {
            "Key" : "ServerRol",
            "Value" : "Servicio"
          },
          {
            "Key" : "Tipo",
            "Value" : "Proyecto"
          }
        ],
				"UserData" : {"Fn::Base64" : {"Fn::Join" : ["", [ ]]}},
				"KeyName": {"Ref": "KeyName"},
				"SecurityGroupIds": [{"Ref": "SecurityGroup"}],
				"BlockDeviceMappings" : [
	        {
	          "DeviceName" : "/dev/xvda",
							"Ebs" : {
							"VolumeType": "io1",
              "Iops": "700",
              "DeleteOnTermination": "true",
              "VolumeSize": "30"
						}
	        }
	      ]
			}
		}
	},
	"Outputs": {
		"InstanceId": {
			"Value": {"Ref": "EC2Instance"},
			"Description": "ID of resource"
		},
		"PublicIPAddress": {
			"Value": {"Fn::GetAtt": ["EC2Instance", "PublicIp"]},
			"Description": "public IP address of the instance"
		}
	}
}