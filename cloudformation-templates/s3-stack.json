{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "S3 buckets for Front End and data exchange respectively",
  "Parameters": {
		"InstanceId": {
			"Description": "EC2 Instance Id",
			"Type": "String"
		}
	},
  "Resources": {
  	"bigdatacmfrontprd": {
	    "Type": "AWS::S3::Bucket",
	    "Properties": {
	    		"BucketName": "bigdata_cm_front_prd",
	        "WebsiteConfiguration": {
	          "IndexDocument": "index.html",
	          "ErrorDocument": "index.html"
	        },
	        "AccessControl": "PublicRead",
	        "VersioningConfiguration": {
	          "Status": "Suspended"
	        },
	        "Tags" : [
			      {
			        "Key" : "Direccion",
			        "Value" : "BIGDATA"
			      },
			      {
			        "Key" : "Entorno",
			        "Value" : "PRD"
			      },
			      {
			        "Key" : "Grupo",
			        "Value" : "BIGDATA"
			      }
			    ]
	    }
		},
		"bigdatacmfrontqas": {
	    "Type": "AWS::S3::Bucket",
	    "Properties": {
	    		"BucketName": "bigdata_cm_front_qas",
	        "WebsiteConfiguration": {
	          "IndexDocument": "index.html",
	          "ErrorDocument": "index.html"
	        },
	        "AccessControl": "PublicRead",
	        "VersioningConfiguration": {
	          "Status": "Suspended"
	        },
	        "Tags" : [
			      {
			        "Key" : "Direccion",
			        "Value" : "BIGDATA"
			      },
			      {
			        "Key" : "Entorno",
			        "Value" : "QAS"
			      },
			      {
			        "Key" : "Grupo",
			        "Value" : "BIGDATA"
			      }
			    ]
	    }
		},
		"bigdatacmdataprd": {
	    "Type": "AWS::S3::Bucket",
	    "Properties": {
	    	"BucketName": "bigdata_cm_data_prd",
	      "AccessControl": "Private",
	      "VersioningConfiguration": {
	        "Status": "Suspended"
	      },
	      "Tags" : [
			      {
			        "Key" : "Direccion",
			        "Value" : "BIGDATA"
			      },
			      {
			        "Key" : "Entorno",
			        "Value" : "PRD"
			      },
			      {
			        "Key" : "Grupo",
			        "Value" : "BIGDATA"
			      }
			    ]
	    }
		},
		"bigdatacmdataqas": {
	    "Type": "AWS::S3::Bucket",
	    "Properties": {
	    	"BucketName": "bigdata_cm_data_qas",
	      "AccessControl": "Private",
	      "VersioningConfiguration": {
	        "Status": "Suspended"
	      },
	      "Tags" : [
			      {
			        "Key" : "Direccion",
			        "Value" : "BIGDATA"
			      },
			      {
			        "Key" : "Entorno",
			        "Value" : "QAS"
			      },
			      {
			        "Key" : "Grupo",
			        "Value" : "BIGDATA"
			      }
			    ]
	    }
	  }
	}
}
