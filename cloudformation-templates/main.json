{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Campaign manager with nested stacks",
	"Parameters": {
		"KeyName": {
			"Description": "Key Pair name",
			"Type": "AWS::EC2::KeyPair::KeyName"
		},
		"VPC": {
			"Description": "VPC to launch virtual services in",
			"Type": "AWS::EC2::VPC::Id"
		},
		"Subnet": {
			"Description": "subnet to launch virtual services in",
			"Type": "AWS::EC2::Subnet::Id"
		},
		"URL": {
			"Description": "URL for load testing",
			"Type": "String",
			"Default": "http://palo-it.com/"
		}
	},
	"Resources": {
		"EC2Stack": {
			"Type" : "AWS::CloudFormation::Stack",
			"Properties" : {
				"Parameters" : {
					"KeyName": {"Ref": "KeyName"},
					"VPC": {"Ref": "VPC"},
					"Subnet": {"Ref": "Subnet"},
					"URL": {"Ref": "URL"}
				},
				"TemplateURL" : "https://s3.amazonaws.com/campaign-manager-cloudformation-templates/emr-stack.json",
				"TimeoutInMinutes" : "5"
			}
		},
		"S3Stack": {
			"Type" : "AWS::CloudFormation::Stack",
			"Properties" : {
				"TemplateURL" : "https://s3.amazonaws.com/campaign-manager-cloudformation-templates/s3-stack.json",
				"TimeoutInMinutes" : "2",
				"Parameters": {
					"InstanceId": {"Fn::GetAtt" : ["EC2Stack", "Outputs.InstanceId"]}
				}
			}
		}
	},
	"Outputs": {
		"InstanceId": {
			"Value": {"Fn::GetAtt" : ["EC2Stack", "Outputs.InstanceId"]},
			"Description": "ID of virtual server"
		},
		"PublicIPAddress": {
			"Value": {"Fn::GetAtt" : ["EC2Stack", "Outputs.PublicIPAddress"]},
			"Description": "public IP address of virtual server"
		}
	}
}